<!-- Contact Us -->
<div class="contact-us">
  <form role="form" class="form-horizontal" action="/contactus" method="post">
    <div class="form-group">
      <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4 text-center contact-header">
        <h1>Contact Us</h1>
        <p>We'd love to hear how we can make your experience better.</p>
      </div>
    </div>
    <div class="form-group">
      <div class="col-xs-5 col-xs-offset-1 col-sm-4 col-sm-offset-2 col-md-2 col-md-offset-4"><label class="sr-only">Name</label><input type="text" class="form-control" name="name" placeholder="Name" required></div>
      <div class="col-xs-5 col-sm-4 col-md-2"><label class="sr-only">Email</label><input type="email" class="form-control" name="email" placeholder="Email" required></div>
    </div>
    <div class="form-group">
      <label class="sr-only" for="name">Subject</label>
      <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
        <input type="text" class="form-control" name="subject" placeholder="Subject" required>
      </div>
    </div>
    <div class="form-group">
      <label class="sr-only" for="name">Message</label>
      <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
        <textarea type="text" class="form-control" name="message" placeholder="Message" rows="3" required></textarea>
      </div>
    </div>
    <div class="form-group">
      <div class="col-xs-5 col-xs-offset-1 col-sm-4 col-sm-offset-2 col-md-2 col-md-offset-4">
        <select class="form-control" name="emotion">
          <option selected disabled>Current mood</option>
          <option value="excited">Excited</option>
          <option value="Frustrated">Frustrated</option>
          <option value="Happy">Happy</option>
          <option value="Angry">Angry</option>
        </select>
      </div>
      <div class="col-xs-5 col-sm-4 col-md-2">
        <button type="submit" class="btn btn-primary btn-block">Submit</button>
      </div>
    </div>
  </form>
</div>

