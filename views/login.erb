<div class="container">

  <!-- Nav tabs -->
  <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
    <ul class="nav nav-tabs nav-justified" role="tablist">
      <li role="presentation" id=""class="active"><a href="#login" aria-controls="login" role="tab" data-toggle="tab">Log In</a></li>
      <li role="presentation"><a href="#signup" aria-controls="signup" role="tab" data-toggle="tab">Sign Up</a></li>
      <li role="presentation" style="display:none"><a href="#signup2" aria-controls="signup2" role="tab" data-toggle="tab"></a></li>
    </ul>
    <br>
  </div>

  <!-- Tab panes -->
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane fade in active" id="login"> <!-- Log in -->
      <form role="form" class="form-horizontal" action="/session" method="post">
        <div class="form-group">
          <label class="sr-only">Email address</label>
          <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
            <input type="email" class="form-control" name="email" placeholder="Email">
          </div>
        </div>
        <div class="form-group">
          <label class="sr-only">Password</label>
          <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
            <input type="password" class="form-control" name="password" placeholder="Password">
          </div>
        </div>
        <div class="form-group">
          <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
            <button type="submit" class="btn btn-primary btn-block">Log In</button>
          </div>
        </div>
      </form>
    </div>
    <div role="tabpanel" class="tab-pane fade in" id="signup"> <!-- Sign up - part 1 -->
        <form role="form" class="form-horizontal" action="/signup" method="post">
          <div class="form-group">
            <div class="col-xs-5 col-xs-offset-1 col-sm-4 col-sm-offset-2  col-md-2 col-md-offset-4"><label class="sr-only">First name</label><input type="text" class="form-control" name="first_name" placeholder="First name" required></div>
            <div class="col-xs-5 col-sm-4 col-md-2"><label class="sr-only">Last name</label><input type="text" class="form-control" name="last_name" placeholder="Last name" required ></div>
          </div>
          <div class="form-group">
            <label class="sr-only" for="input_email">Email</label>
            <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
              <input type="email" class="form-control" name="email" placeholder="Email" required>
            </div>
          </div>
          <div class="form-group">
            <label class="sr-only" for="input_password">Password</label>
            <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
              <input type="password" class="form-control" name="password" placeholder="Password" required>
            </div>
          </div>
          <div class="form-group">
            <label class="sr-only" for="input_linkedin">LinkedIn profile</label>
            <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
              <input type="url" class="form-control" name="linkedin_url" placeholder="LinkedIn profile link" required>
            </div>
          </div>
          <div class="form-group">
            <label class="sr-only" for="input_personal">Personal link</label>
            <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
              <input type="url" class="form-control" name="personal_url" placeholder="Link to your blog, website, portfolio (optional)">
            </div>
          </div>
          <div class="form-group">
            <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
              <select class="form-control" name="current_industry" required>
                <option selected disabled>What industry are you in?</option>
                <% @industries.each do |industry| %>
                  <option value="<%= industry.id %>"> <%= industry.name %> </option>
                <% end %>
              </select>
            </div>
          </div>
          <div class="form-group">
            <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
              <select class="form-control" name="location" required>
                <option selected disabled>Where do you live?</option>
                <% @locations.each do |location| %>
                  <option value="<%= location.id %>"> <%= location.city %>, <%= location.country %>  </option>
                <% end %>
              </select>
            </div>
          </div>
          <div class="form-group"> <!-- Triggers tab change to sign up - part 2-->
            <nav class="text-left col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
              <ul class="pager signup-previous" role="tablist">
                <li role="presentation" class="next"><a href="#signup2" aria-controls="signup2" role="tab" data-toggle="tab">Next <span aria-hidden="true">&rarr;</span></a></li>
              </ul>
            </nav>
          </div>
        </div>
      <div role="tabpanel" class="tab-pane fade" id="signup2"> <!-- Sign up - part 2 -->
        <div class="form-group">
          <nav class="text-left col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
            <ul class="pager signup-previous" role="tablist">
              <li role="presentation" class="previous"><a href="#signup" aria-controls="signup" role="tab" data-toggle="tab"><span aria-hidden="true">&larr;</span> Previous</a></li>
            </ul>
          </nav>
          <label class="text-left col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4" for="interested_industries"><p>Industries you would like to introduced to people from:</p></label>
          <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
            <div class="panel panel-default preference-box">
              <div class="panel-body">
                <% @industries.each do |industry| %>
                  <label class="checkbox col-xs-6 col-sm-6 col-md-6 signup-preferences">
                    <input type="checkbox" name="interested_industries[preferences][]" value="<%= industry.id %>"> <%= industry.name %>
                  </label>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="checkbox col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
            <label><input type="checkbox" required> I agree for my contact details to be shared during introductions.</label>
          </div>
        </div>
        <div class="form-group">
          <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
            <button type="submit" class="btn btn-primary btn-block">Submit</button> <!-- Submit / create user in database -->
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
