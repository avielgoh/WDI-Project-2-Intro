<div class="container">
  <form role="form" class="form-horizontal" action="/signup/register" method="post">
    <div class="form-group">
      <div class="col-md-4 col-md-offset-4">
        <ul class="nav nav-tabs nav-justified">
          <li role="presentation" class="active"><a href="/signup">Sign Up</a></li>
          <li role="presentation"><a href="/login">Log In</a></li>
        </ul>
      </div>
    </div>
    <div class="form-group">
      <div class="col-xs-6 col-sm-6 col-md-2 col-md-offset-4"><label class="sr-only">First name</label><input type="text" class="form-control" name="first_name" placeholder="First name"></div>
      <div class="col-xs-6 col-sm-6 col-md-2"><label class="sr-only">Last name</label><input type="text" class="form-control" name="last_name" placeholder="Last name"></div>
    </div>
    <div class="form-group">
      <label class="sr-only" for="input_email">Email</label>
      <div class="col-md-4 col-md-offset-4">
        <input type="email" class="form-control" name="email" placeholder="Email">
      </div>
    </div>
    <div class="form-group">
      <label class="sr-only" for="input_password">Password</label>
      <div class="col-md-4 col-md-offset-4">
        <input type="password" class="form-control" name="password" placeholder="Password">
      </div>
    </div>
    <div class="form-group">
      <label class="sr-only" for="input_linkedin">LinkedIn profile</label>
      <div class="col-md-4 col-md-offset-4">
        <input type="url" class="form-control" name="linkedin_url" placeholder="LinkedIn profile link">
      </div>
    </div>
    <div class="form-group">
      <label class="sr-only" for="input_personal">Personal link</label>
      <div class="col-md-4 col-md-offset-4">
        <input type="url" class="form-control" name="personal_url" placeholder="Link to your blog, website, portfolio (optional)">
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-4 col-md-offset-4">
        <select class="form-control" name="current_industry">
          <option selected disabled>What industry are you in?</option>
          <% @industries.each do |industry| %>
            <option value="<%= industry.name %>"> <%= industry.name %> </option>
          <% end %>
        </select>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-4 col-md-offset-4">
        <select class="form-control" name="location">
          <option selected disabled>Where do you live?</option>
          <% @locations.each do |location| %>
            <option value="<%= location.id %>"> <%= location.city %>, <%= location.country %>  </option>
          <% end %>
        </select>
      </div>
    </div>
    <div class="form-group">
      <div class="checkbox col-md-4 col-md-offset-4">
        <label><input type="checkbox" required> I agree for my personal details to be shared during introductions.</label>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-4 col-md-offset-4">
        <button type="submit" class="btn btn-primary btn-block">Next</button>
      </div>
    </div>
  </form>
  <hr>
</div>
