<br>
  <!-- Edit locations table -->
  <div class="panel panel-default col-md-10 col-md-offset-1">
    <div class="panel-heading">
      <h3 class="panel-title">Edit locations</h3>
    </div>
    <div class="panel-body">
      <!-- Create new location -->
      <div class="col-md-6">
        <form action="/admin/settings/edit_location" method="post">
          <div class="form-group">
            <label class="text-right col-md-4" for="create_location_city">Create a new location</label>
            <div class="col-md-8">
              <input type="text" class="form-control" name="city" placeholder="City">
            </div>
          </div>
          <div class="form-group">
            <label class="text-right col-md-4" for="create_location_country"></label>
            <div class="col-md-8">
              <input type="text" class="form-control" name="country" placeholder="Country">
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-8 col-md-offset-4">
              <button type="submit" class="btn btn-primary btn-block">Create</button>
            </div>
          </div>
        </form>
      </div>
      <!-- Delete location -->
      <div class="col-md-6">
        <form action="/admin/settings/edit_location" method="post">
          <input type="hidden" name="_method" value="delete">
          <div class="form-group">
            <label class="text-right col-md-4" for="delete_location">Delete a location</label>
            <div class="col-md-8">
              <select class="form-control" name="location">
                <option selected disabled>Select a location</option>
                <% @locations.each do |location| %>
                  <option value="<%= location.id %>"> <%= location.city %>, <%= location.country %>  </option>
                <% end %>
              </select>
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-8 col-md-offset-4">
              <button type="submit" class="btn btn-primary btn-block">Delete</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
  <!-- Edit industries table -->
  <div class="panel panel-default col-md-10 col-md-offset-1">
    <div class="panel-heading">
      <h3 class="panel-title">Edit industries</h3>
    </div>
    <div class="panel-body">
      <!-- Create new industry -->
      <div class="col-md-6">
        <form action="/admin/settings/edit_industry" method="post">
          <div class="form-group">
            <label class="text-right col-md-4" for="create_industry">Create a new industry</label>
            <div class="col-md-8">
              <input type="text" class="form-control" name="industry" placeholder="Name">
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-8 col-md-offset-4">
              <button type="submit" class="btn btn-primary btn-block">Create</button>
            </div>
          </div>
        </form>
      </div>
      <!-- Delete industry -->
      <div class="col-md-6">
        <form action="/admin/settings/edit_industry" method="post">
          <input type="hidden" name="_method" value="delete">
          <div class="form-group">
            <label class="text-right col-md-4" for="delete_industry">Delete an industry</label>
            <div class="col-md-8">
              <select class="form-control" name="industry">
                <option selected disabled>Select an industry</option>
                <% @industries.each do |industry| %>
                  <option value="<%= industry.name %>"> <%= industry.name %> </option>
                <% end %>
              </select>
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-8 col-md-offset-4">
              <button type="submit" class="btn btn-primary btn-block">Delete</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
