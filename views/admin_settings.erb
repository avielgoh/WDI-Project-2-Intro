<div class="container">
  <!-- Nav tabs -->
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <ul class="nav nav-tabs nav-justified">
        <li role="presentation"><a href="/admin/dashboard"><span class="glyphicon glyphicon-home" aria-hidden="true"></span> Dashboard</a></li>
